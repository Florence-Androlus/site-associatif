{% extends 'base.html.twig' %}

{% block body %}
<!-- Mon container (avec une max-width) dans lequel mon contenu va être placé: https://getbootstrap.com/docs/4.1/layout/overview/#containers -->
<div class="container ">
    <!-- Je crée une nouvelle ligne dans ma grille virtuelle: https://getbootstrap.com/docs/4.1/layout/grid/-->
    <div class="row">
		<div class="grid-x grid-padding-x">
			<div class="small-12 medium-8 medium-offset-2 large-6 large-offset-3 cell">

				<h1>Renouvellement du mot de passe</h1>
				{{form_start(form)}}
				{{form_row(form.password)}}
				{{form_row(form.confirm_password)}}
				<button class="button"  type="submit">Envoyer</button>
				{{form_end(form)}}

			</div>
		</div>
	</div>
</div>
{% endblock %}